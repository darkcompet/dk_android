<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="compet.library">

	<uses-permission android:name="android.permission.NFC" />

	<!-- Note, this app requires NFC tag reader, so device which does not support NFC reader cannot install this app -->
	<uses-feature
		android:name="android.hardware.nfc"
		android:required="true" />

	<application
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:name=".App"
		android:theme="@style/Dk.LightTheme.FullScreen"
		tools:ignore="GoogleAppIndexingWarning">

		<activity
			android:name=".presentation.main.MainActivity"
			android:theme="@style/Dk.LightTheme.Teal">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.nfc.action.TECH_DISCOVERED" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>

			<meta-data
				android:name="android.nfc.action.TECH_DISCOVERED"
				android:resource="@xml/nfc_tech_filter" />
		</activity>

	</application>

</manifest>
